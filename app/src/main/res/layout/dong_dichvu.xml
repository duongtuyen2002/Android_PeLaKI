<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_alignParentStart="true"
    android:layout_width="wrap_content"
    android:paddingLeft="3dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:padding="3dp"
        android:paddingBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#A342B1A8">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#A342B1A8"
            app:cardCornerRadius="200dp">

            <ImageView
                android:id="@+id/iconThucAn"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                tools:srcCompat="@tools:sample/avatars"></ImageView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tenloaithucan"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iconThucAn"
            android:layout_alignParentStart="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="40dp"
            android:text="Giá Dịch Vụ"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tendichvu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:text="Tên dịch vụ"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tenhang"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iconThucAn"
            android:layout_alignParentStart="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="40dp"
            android:text="Tên hãng"
            android:textSize="13sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>
</RelativeLayout>