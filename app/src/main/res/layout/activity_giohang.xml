<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:weightSum="10"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Recy.giohang"
        android:layout_width="match_parent"
        android:layout_height="632dp" />

    <RelativeLayout
        android:id="@+id/rlt"
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:layout_below="@+id/Recy.giohang"
        android:layout_marginTop="10dp"
        android:background="#E1DBDB">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B2B6B2" />

        <TextView
            android:id="@+id/voucher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"
            android:text="Voucher"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/chon"
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="164dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/voucher"
            android:text="chọn hoặc nhập mã"
            android:textSize="18sp" />

        <View
            android:id="@+id/view_nhapma"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/chon"
            android:layout_marginTop="7dp"
            android:background="#B2B6B2" />

        <TextView
            android:id="@+id/sudungxu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_nhapma"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"
            android:text="Sử dụng xu"
            android:textSize="18sp" />

        <Switch
            android:id="@+id/switch_xu"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_nhapma"
            android:layout_marginLeft="241dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/sudungxu" />

        <View
            android:id="@+id/view_sudungxu"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/sudungxu"
            android:layout_marginTop="7dp"
            android:background="#B2B6B2" />

        <CheckBox
            android:id="@+id/checkbox_Tatca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_sudungxu"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Tất cả" />

        <Button
            android:id="@+id/btn.muahang"
            android:layout_width="116dp"
            android:layout_height="53dp"
            android:layout_below="@+id/view_sudungxu"
            android:layout_marginLeft="222dp"
            android:layout_marginTop="41dp"
            android:layout_toRightOf="@+id/checkbox_Tatca"
            android:background="@drawable/btn_shape"
            android:backgroundTint="#DAFF7A32"
            android:text="Mua hàng"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btn.tieptuc"
            android:layout_width="116dp"
            android:layout_height="53dp"
            android:layout_below="@+id/view_sudungxu"
            android:layout_marginLeft="93dp"
            android:layout_marginTop="41dp"
            android:layout_toRightOf="@+id/checkbox_Tatca"
            android:background="@drawable/btn_shape"
            android:backgroundTint="#DAFF7A32"
            android:text="Tiếp tục mua"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tv.tongtien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_sudungxu"
            android:layout_marginStart="9dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/checkbox_Tatca"
            android:text="Tổng thanh toán"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tongtien"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_sudungxu"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/tv.tongtien"
            android:text="Tổng tiền"
            android:textColor="#FF0000"
            android:textSize="18sp" />
    </RelativeLayout>

</RelativeLayout>