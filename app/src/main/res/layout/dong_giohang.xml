<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img.giohang"
        android:layout_width="125dp"
        android:layout_height="126dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:src="@color/black"></ImageView>

    <TextView
        android:id="@+id/tv.tensp"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/img.giohang"
        android:gravity="center"
        android:text="Tên sản phẩm"
        android:textSize="17sp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/tv.giasp"
        android:layout_width="186dp"
        android:layout_height="32dp"
        android:layout_below="@+id/tv.tensp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/img.giohang"
        android:gravity="center"
        android:text="Giá"
        android:textColor="#E41B1B"
        android:textSize="16sp"
        android:textStyle="italic"></TextView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv.giasp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/img.giohang">

        <Button
            android:id="@+id/btn.tru"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:backgroundTint="#858585"
            android:focusable="false"
            android:gravity="center"
            android:text="-"
            android:textColor="#FFF"
            android:textSize="15sp"></Button>

        <TextView
            android:id="@+id/tv.giatri"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@+id/btn.tru"
            android:backgroundTint="#FFF"
            android:gravity="center"
            android:text="1"
            android:textColor="#000000"
            android:textSize="35sp"></TextView>

        <Button
            android:id="@+id/btn.cong"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_toEndOf="@+id/tv.giatri"
            android:backgroundTint="#858585"
            android:focusable="false"
            android:gravity="center"
            android:text="+"
            android:textColor="#FFF"
            android:textSize="15sp"></Button>
    </RelativeLayout>



</RelativeLayout>